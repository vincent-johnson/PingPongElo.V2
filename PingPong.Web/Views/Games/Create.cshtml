@model PingPong.Web.Models.GamesCreateViewModel
@{
    ViewBag.Title = "Create Game";
}

<h2>@ViewBag.Title.</h2>
@{
   var listitems=new SelectList(Model.Usernames);
}
@using (Html.BeginForm("Create", "Games", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new game.</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.OpponenUsername, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.OpponenUsername, listitems)
        </div>
    </div> 
    <div class="form-group">
        @Html.LabelFor(m => m.YouWonFlag, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.YouWonFlag)
        </div>
    </div>     
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Add Match" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}